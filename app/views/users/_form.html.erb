<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :image_profile %>
    <%= form.text_field :image_profile, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :name_user %>
    <%= form.text_field :name_user, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  
  <% if current_user.nil? %>
    <div class="form-group">
      <%= form.label :phone %>
      <%= form.text_field :phone, class: "form-control" %>
    </div>
    <% else %>
      <fieldset disabled>
        <div class="form-group" id="disabledTextInput">
          <%= form.label :phone %>
          <%= form.text_field :phone, class: "form-control" %>
        </div>
      </fieldset>
  <% end %>
  

  

  <div class="form-group">
    <%= form.label :cpf %>
    <%= form.text_field :cpf, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :gender %>
    <%= form.text_field :gender, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :profile %>
    <%= form.text_field :profile, class: "form-control" %>
  </div>


  <div class="actions">
    <%= form.submit nil, class: "btn btn-success"%>
  </div>
<% end %>